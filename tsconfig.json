{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/ProductList.jsx",
    "src/pages/product/[ids].jsx/index.jsx",
    "src/pages/_app.tsx",
    "src/pages/admin/AdminPanel.jsx",
    "src/pages/admin/index.jsx",
    "src/components/adminComponents/OrderList.jsx"
  ],
  "exclude": ["node_modules"]
}
